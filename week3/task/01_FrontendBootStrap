<!-- 1. Responsive Portfolio Site -->
<section class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center">
      <img src="https://via.placeholder.com/150" class="rounded-circle img-fluid" alt="Profile">
      <h2 class="mt-3">Your Name</h2>
      <p class="text-muted">Full Stack Developer</p>
    </div>
    <div class="col-md-8">
      <h3>About Me</h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>
  </div>
</section>

<!-- 2. Product Landing Page -->
<section class="container text-center my-5">
  <h1 class="mb-4">Awesome Product</h1>
  <p class="lead">This is a great product that solves your problems.</p>
  <button class="btn btn-primary">Buy Now</button>
</section>

<!-- 3. Blog Layout -->
<section class="container my-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Blog Title</h2>
      <p>Post content goes here...</p>
    </div>
    <div class="col-md-4">
      <h4>Sidebar</h4>
      <ul class="list-group">
        <li class="list-group-item">Category 1</li>
        <li class="list-group-item">Category 2</li>
      </ul>
    </div>
  </div>
</section>

<!-- 4. To-do List UI -->
<section class="container my-5">
  <h2 class="mb-3">To-Do List</h2>
  <input type="text" class="form-control mb-2" placeholder="Add task...">
  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      Task 1
      <button class="btn btn-sm btn-danger">Delete</button>
    </li>
  </ul>
</section>

<!-- 5. E-commerce Card Grid -->
<section class="container my-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <img src="https://via.placeholder.com/150" class="card-img-top">
        <div class="card-body">
